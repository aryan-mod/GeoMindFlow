# Database Configuration
DATABASE_URL=postgresql://rockfall_user:rockfall_password@localhost:5432/rockfall_db
POSTGRES_DB=rockfall_db
POSTGRES_USER=rockfall_user
POSTGRES_PASSWORD=rockfall_password
PGHOST=localhost
PGPORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# MinIO/S3 Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=rockfall_minio
MINIO_SECRET_KEY=rockfall_minio_password
MINIO_BUCKET_NAME=rockfall-data
MINIO_USE_SSL=false

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_USE_SSL=false

# Twilio Configuration (for SMS alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SMTP Configuration (for email alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# WhatsApp Configuration (via Twilio)
WHATSAPP_PHONE_NUMBER=whatsapp:+1234567890

# Emergency Contacts
EMERGENCY_CONTACT_1=+1234567890
EMERGENCY_CONTACT_2=+1234567891
EMERGENCY_EMAIL_1=emergency@example.com
EMERGENCY_EMAIL_2=supervisor@example.com
EMERGENCY_WHATSAPP_1=+1234567890
EMERGENCY_WHATSAPP_2=+1234567891

# API Keys and External Services
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token
WEATHER_API_KEY=your_weather_api_key
OPENWEATHER_API_KEY=your_openweather_api_key

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=true
SECRET_KEY=your-secret-key-for-jwt-tokens

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_access_token
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Production Configuration
DOMAIN=rockfall.example.com
SSL_CERT_PATH=/etc/ssl/certs/rockfall.crt
SSL_KEY_PATH=/etc/ssl/private/rockfall.key

# Docker Registry (for production)
DOCKER_REGISTRY=your-registry.com
VERSION=latest

# Monitoring and Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=secure_grafana_password
GRAFANA_SECRET_KEY=your_grafana_secret_key

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=rockfall-backups
BACKUP_S3_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ML Model Configuration
MODEL_UPDATE_INTERVAL=86400  # 24 hours in seconds
PREDICTION_BATCH_SIZE=32
MODEL_CACHE_TTL=3600  # 1 hour in seconds

# Edge Device Configuration
EDGE_SYNC_INTERVAL=3600  # 1 hour in seconds
EDGE_OFFLINE_THRESHOLD=7200  # 2 hours in seconds
EDGE_PREDICTION_INTERVAL=300  # 5 minutes in seconds

# Alert Thresholds
HIGH_RISK_THRESHOLD=0.7
CRITICAL_RISK_THRESHOLD=0.9
ALERT_COOLDOWN_PERIOD=300  # 5 minutes in seconds

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload Limits
MAX_FILE_SIZE=50MB
MAX_FILES_PER_REQUEST=10
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,tiff
ALLOWED_DEM_FORMATS=tiff,asc,xyz

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC

# Development Only
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false
MOCK_EXTERNAL_APIS=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_rockfall_db
TEST_REDIS_URL=redis://localhost:6379/1

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:5000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30
WS_MESSAGE_SIZE_LIMIT=1MB

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_PREDICTIONS=1800
CACHE_TTL_SENSOR_DATA=300

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi
TIME_ZONE=Asia/Kolkata

# Feature Flags
ENABLE_REAL_TIME_ALERTS=true
ENABLE_BATCH_PROCESSING=true
ENABLE_EDGE_COMPUTING=true
ENABLE_ML_RETRAINING=true
ENABLE_SYNTHETIC_DATA=false

# Data Retention
SENSOR_DATA_RETENTION_DAYS=365
PREDICTION_DATA_RETENTION_DAYS=730
ALERT_DATA_RETENTION_DAYS=1095
LOG_RETENTION_DAYS=90

# Performance Tuning
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
REDIS_POOL_SIZE=10
HTTP_TIMEOUT=30
WORKER_TIMEOUT=300

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_TIMEOUT=10
WEBHOOK_RETRY_ATTEMPTS=3

# External API Endpoints
WEATHER_API_ENDPOINT=https://api.openweathermap.org/data/2.5
GEOLOGICAL_SURVEY_API=https://api.geologicalsurvey.gov
SATELLITE_DATA_API=https://api.satellite-data.com

# Model Serving Configuration
MODEL_SERVING_WORKERS=4
MODEL_WARM_UP_SAMPLES=10
ONNX_OPTIMIZATION_LEVEL=all
BATCH_INFERENCE_SIZE=16

# Data Pipeline Configuration
DATA_VALIDATION_ENABLED=true
DATA_QUALITY_THRESHOLD=0.8
OUTLIER_DETECTION_ENABLED=true
FEATURE_SCALING_METHOD=standard

# Audit and Compliance
AUDIT_LOG_ENABLED=true
DATA_PRIVACY_MODE=false
GDPR_COMPLIANCE_ENABLED=false
AUDIT_RETENTION_DAYS=2555  # 7 years
